<%- include('navbar.ejs') %>
<br>
<br>
<div class="container">
    <div  role="document">
            <div class="modal-body">
                <div class="row no-gutters">
                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <!-- Product Slider --> 
                            <div class="product-gallery">
                                <div class="quickview-slider-active">
                                    <div class="single-slider">
                                        <img src="/uploads/<%=product_info.product_image1%>" >
                                    </div>
                                    <div class="single-slider">
                                        <img src="/uploads/<%=product_info.product_image2%>" >
                                    </div>
                                    <div class="single-slider">
                                        <img src="/uploads/<%=product_info.product_image3%>" >
                                    </div>
                                </div>
                            </div>
                        <!-- End Product slider -->
                    </div>

                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                <form action="/add_to_cart" method="post">
                        <div class="quickview-content">
                            <input type="hidden" name="product_id" value="<%=product_info.product_id%>">
                            <h2><%=product_info.product_name%></h2>
                            <span><%=product_info.category_name%></span>
                            <h3>&#8377; <%=product_info.product_price%> /- <del><%=product_info.duplicate_price%></del> /-</h3>
                            <div class="quickview-peragraph">
                                <p><%=product_info.product_information.slice(0,30)%>...
                                </p>
                            </div>
                            <div class="size">
                                <div class="row">
                                    <div class="col-lg-6 col-12">
                                        <h5 class="title">Size: <%=product_info.product_size%></h5>
                                       
                                    </div>
                                    <div class="col-lg-6 col-12">
                                        Color:
                                        <button type="button" style="background-color: '<%=product_info.product_color%>;'">..</button>
                                    </div>
                                </div>
                            </div>
                            <div class="quantity">
                                <!-- Input Order -->
                                <div class="input-group">
                                    <div class="button minus">
                                        <button type="button" class="btn btn-primary btn-number" disabled="disabled" data-type="minus" data-field="quant">
                                            <i class="ti-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" name="quant" class="input-number"  data-min="1" data-max="1000" value="1">
                                    <div class="button plus">
                                        <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant">
                                            <i class="ti-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <!--/ End Input Order -->
                            </div>
                            <div class="add-to-cart">
                                <button class="btn">Add to cart</button> 
                                <!-- <a href="#" class="btn min"><i class="ti-heart"></i></a>
                                <a href="#" class="btn min"><i class="fa fa-compress"></i></a> -->
                            </div>
                            <div class="default-social">
                                <h4 class="share-now">Share:</h4>
                                <ul>
                                    <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a class="youtube" href="#"><i class="fa fa-pinterest-p"></i></a></li>
                                    <li><a class="dribbble" href="#"><i class="fa fa-google-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>
                 </form>
                    </div>
                </div>
            </div>
            
    </div>
</div>
<!-- Modal end -->>
<%- include('footer.ejs') %>