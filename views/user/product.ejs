<!-- Breadcrumbs -->
<%- include('navbar.ejs') %>

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="/">Home<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a href="/product">Products</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->

<!-- Product Style -->
<section class="product-area shop-sidebar shop section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
                <div class="row">
                    <% for(var i=0;i<products.length;i++) { %>
                    <div class="col-lg-3 col-md-4 col-12">
                        <div class="single-product">
                            <div class="product-img">
                                <a href="/product_details/<%=products[i].product_id%>">
                                    <img class="default-img" src="/uploads/<%=products[i].product_image1%>" alt="#">
                                    <img class="hover-img" src="/uploads/<%=products[i].product_image2%>" alt="#">
                                    <img class="hover-img" src="/uploads/<%=products[i].product_image3%>" alt="#">
                                </a>
                                <div class="button-head">
                                    <div class="product-action">
                                        <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="/product_details"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                                        
                                    </div>
                                    <div class="product-action-2">
                                        <a href="/product_details/<%=products[i].product_id%>"> Views Details</a>
                                    </div>
                                </div>
                            </div>
                            <div class="product-content">
                                <h3><a href="/product_details/<%=products[i].product_id%>"><%=products[i].product_name%></a></h3>
                                <div class="product-price">
                                    <big style="font-weight:bold;">&#8377; <%=products[i].product_price%></big>
                                    <del>&#8377; <%=products[i].duplicate_price%></del>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
                <div class="mt-5 mb-3"><center>
                    <!-- Previous Button -->
<% if (page_no > 1) { %>
    <a href="/product?page_no=<%= page_no - 1 %><% if(search_key){ %>&search=<%= search_key %><% } %>" class="btn btn-primary">Previous</a>
<% } else { %>
    <button class="btn btn-primary" disabled>Previous</button>
<% } %>

<!-- Next Button -->
<% if (page_no < total_pages) { %>
    <a href="/product?page_no=<%= parseInt(page_no) + 1 %><% if(search_key){ %>&search=<%= search_key %><% } %>" class="btn btn-primary">Next</a>
<% } else { %>
    <button class="btn btn-primary" disabled>Next</button>
<% } %>
                </center></div>
            </div>
           
        </div>
    </div>
</section>
<!--/ End Product Style 1  -->	
<%- include('footer.ejs') %>