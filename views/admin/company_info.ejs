<%- include('navbar.ejs') %>
<form action="/admin/update_company_information" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-3 shadow">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Company Information</h3>
            </div>
            <div class="col-md-4 mb-3">
                Company Name
                <input class="form-control" type="text" name="company_name" value="<%=company_info[0].company_name%>">
         </div>
            <div class="col-md-6 mb-3">
                Company Details
                <textarea type="text" class="form-control" rows="1" name="company_details" ><%=company_info[0].company_details%></textarea>
            </div>
            <div class="col-md-3 mb-3">
                Company Logo
                <input class="form-control" type="file" accept="image/*" name="company_logo">
         </div>
            <div class="col-md-1">
                <img src="/uploads/<%=company_info[0].company_logo%>" width="100%" class="mt-2">  
            </div>
            <div class="col-md-4 mb-3">
                Company Contact NO
                <input class="form-control" type="text"  name="company_contact_no" value="<%=company_info[0].company_contact_no%>">
           </div>
            <div class="col-md-4 mb-3">
                Company Contact Email
                <input class="form-control" type="email"  name="company_contact_email" value="<%=company_info[0].company_contact_email%>">
            </div>
            <div class="col-md-6 mb-3">
                Company Address
                <textarea type="text" rows="1" class="form-control" name="company_address" ><%=company_info[0].company_address%></textarea>
            </div> 
            <div class="col-md-6 mb-3">
                Company Location
                <textarea class="form-control" type="text"  rows="1" name="company_location"><%=company_info[0].company_location%></textarea>
            </div> 
            <div class="col-md-4 mb-3">
                Company Facrbook Link
                <input class="form-control" type="text"  name="company_facebook_link" value="<%=company_info[0].company_facebook_link%>">
            </div> 
            <div class="col-md-4 mb-3">
                Company Twitter Link
                <input class="form-control" type="text"  name="company_twitter_link" value="<%=company_info[0].company_twitter_link%>">
            </div> 
            <div class="col-md-4 mb-3">
                Company Whatsapp Link
                <input class="form-control" type="text"  name="company_whatsapp_link" value="<%=company_info[0].company_whatsapp_link%>">
            </div> 
            <div class="col-md-4 mb-3">
                Company Instagram Link
                <input class="form-control" type="text"  name="company_instagram_link" value="<%=company_info[0].company_instagram_link%>">
            </div>
            <div class="col-md-4 mb-3">
                Company LinkedIn Link
                <input class="form-control" type="text"  name="company_linkedin_link" value="<%=company_info[0].company_linkedin_link%>">
            </div>
            <div class="col-md-4 mb-3">
                Company Telegram Link
                <input class="form-control" type="text"  name="company_telegram_link" value="<%=company_info[0].company_telegram_link%>">
            </div>
            <div class="col-md-12 mb-3 text-center">
                <button class="btn btn-primary">Update Information</button>
            </div>
        </div>
    </div>
</form>
<%- include('footer.ejs') %>


