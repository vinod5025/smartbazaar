<%- include('navbar.ejs') %>
<form action="/admin/update_product_category" method="post">
    <input type="hidden" name="product_category_id" value="<%=cat_info[0].product_category_id%>">
    <div class="container-fluid bg-white p-3 shadow">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Edit Category</h3>
            </div>
            <div class="col-md-4">
                Category Name
                <input type="text" name="category_name" class="form-control" value="<%=cat_info[0].category_name%>">
            </div>
            <div class="col-md-7">
                Category Details
                <textarea type="text" rows="1" name="category_details" class="form-control"><%=cat_info[0].category_details%></textarea>
            </div>
            <div class="col-md-1">
                <br>
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</form>
